[Unit]
Description=CalculatorProject Spring Boot Service
After=network.target

[Service]
User=root
WorkingDirectory=/opt/calculator
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
ExecStart=/bin/bash -c 'exec java -DLOG_HOME=/var/log/calculator -jar /opt/calculator/CalculatorProject-1.0.jar'
StandardOutput=journal
StandardError=journal
SyslogIdentifier=calculator
Type=simple
SuccessExitStatus=143
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
